generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id           Int           @id @default(autoincrement())
  emp_no       String        @unique
  emp_name     String
  date_hired   String
  agency       String
  department   String
  status       String
  reg_date     DateTime      @default(now())
  employeeLogs EmployeeLog[]
}

model EmployeeLog {
  id         Int       @id @default(autoincrement())
  time_in    DateTime
  time_out   DateTime?
  employeeId Int
  employee   Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}
